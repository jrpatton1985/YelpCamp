<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>YelpCamp</title>
    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/starability-all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <!-- Scroll Reveal  -->
    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script type="text/javascript">
      window.sr = ScrollReveal();
    </script>
  </head>
  <body>

    <nav class="navbar navbar-default" id="top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/">YelpCamp</span></a>
                <ul id="ticker">
                  <li>Discover amazing campgrounds from all over the globe</li>
                  <li>Start planning your trip today</li>
                  <li>Getcha-Camp-On!</li>
                  <li>View an exquisite selection of hand-picked campgrounds</li>
                  <li>Sign up and get started!</li>
                </ul>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                      <li class="header-icon<%= typeof pageSelect !== 'undefined' && pageSelect === 'campgrounds' ? ' active' : '' %>"><a href="/campgrounds"><i class="glyphicon glyphicon-tent"> </i></a></li>
                  <% if(!currentUser){ %>
                      <li class="dropdown <%= typeof pageSelect !== 'undefined' && pageSelect === 'login' ? ' active' : '' %><%= typeof pageSelect !== 'undefined' && pageSelect === 'register' ? ' active' : '' %>">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user fa-2x"> </i></a>

                        <div class="panel panel-default dropdown-menu">
                          <div class="panel-body">
                            <h3>Welcome to YelpCamp</h3>
                            <p>Discover amazing campgrounds from all over the globe</p>
                            <a href="/register" class="btn btn-default btn-lg"><i class="fa fa-user-plus"> </i> Create Account</a>
                            <hr>
                            <div class="form-center">
                              <p>Already have an account? Sign In</p>
                              <form action="/login" method="post">
                                <div class="form-group">
                                  <input class="form-control" type="text" name="username" value="" placeholder="username">
                                </div>
                                <div class="form-group">
                                  <input class="form-control" type="password" name="password" value="" placeholder="password">
                                </div>
                                <div class="form-group">
                                  <input class="btn btn-lg btn-primary pull-right" type="submit" name="" value="Log In">
                                </div>
                              </form>
                            </div>
                            <div class="forgot-link-parent">
                              <a href="/forgot" class="forgot-link">Forgot your password?</a>
                            </div>
                          </div>
                        </div>
                      </li>

                  <% } else { %>
                      <li class="dropdown <%= typeof pageSelect !== 'undefined' && pageSelect === 'profile' ? ' active' : '' %>">
                        <a href="#" class="dropdown-toggle<%= currentUser.isAdmin ? ' admin' : '' %>" data-toggle="dropdown"><i class="fa fa-user fa-2x"> </i> <%= currentUser.username %></a>
                        <ul class="dropdown-menu">
                          <li><a href="/profile"><i class="fa fa-user"></i> Account</a></li>
                          <li class="divider"></li>
                          <li><a href="/logout"><i class="fa fa-sign-out"> </i> Sign Out</a></li>
                        </ul>
                      </li>
                  <% } %>
              </ul>
            </div>
        </div>
    </nav>

    <section id="flash">
      <div class="container<%= typeof pageSelect !== 'undefined' && pageSelect === 'campgrounds' ? ' container-top' : '' %>">
        <div class="row">
          <div class="col-md-12">
            <% if (error && error.length > 0) {%>
              <% error.forEach(function(err) { %>
                <div class="alert alert-danger" role="alert">
                  <i class="glyphicon glyphicon-remove"></i> <%=err %>
                </div>
                <div class="close">X</div>
              <% }); %>

            <% } %>
            <% if (success && success.length > 0) {%>
                <div class="alert alert-success" role="alert">
                  <i class="glyphicon glyphicon-ok"></i> <%=success %>
                </div>
                <div class="close">X</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
