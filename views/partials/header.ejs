<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>YelpCamp</title>
    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/starability-all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <!-- Scroll Reveal  -->
    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script type="text/javascript">
      window.sr = ScrollReveal();
    </script>
  </head>
  <body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/">YelpCamp</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                      <li class="<%= typeof pageSelect !== 'undefined' && pageSelect === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds"><i class="glyphicon glyphicon-tent"> </i> Home</a></li>
                  <% if(!currentUser){ %>
                      <li class="<%= typeof pageSelect !== 'undefined' && pageSelect === 'login' ? 'active' : '' %>">
                        <a href="/login" id="login"><i class="fa fa-sign-in"> </i> Log In</a>
                      </li>
                      <li class="<%= typeof pageSelect !== 'undefined' && pageSelect === 'register' ? 'active' : '' %>"><a href="/register"><i class="fa fa-user-plus"> </i> Sign Up</a></li>
                  <% } else { %>
                      <li class="<%= typeof pageSelect !== 'undefined' && pageSelect === 'profile' ? 'active' : '' %>"><a href="/profile"><i class="fa fa-user"> </i> <%= currentUser.username %></a></li>
                      <li><a href="/logout"><i class="fa fa-sign-out"> </i> Logout</a></li>
                  <% } %>
              </ul>
            </div>
        </div>
    </nav>

    <section id="flash">
      <div class="container">
        <% if (error && error.length > 0) {%>
          <% error.forEach(function(err) { %>
            <div class="alert alert-danger" role="alert">
              <i class="glyphicon glyphicon-remove"></i> <%=err %>
            </div>
          <% }); %>

        <% } %>
        <% if (success && success.length > 0) {%>
            <div class="alert alert-success" role="alert">
              <i class="glyphicon glyphicon-ok"></i> <%=success %>
            </div>
        <% } %>
      </div>
    </section>
