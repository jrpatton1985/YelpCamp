<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <i class="glyphicon glyphicon-plus form-icon"></i><span class="fa fa-comment"></span>
            <h2><%=campground.name %></h2>

            <div class="form-center">
              <form action="/campgrounds/<%=campground._id %>/comments" method="POST">
                <div class="form-group">
                  <input class="form-control" type="text" name="comment[text]" value="" placeholder="text">
                </div>
                <div class="form-group">
                  <input class="btn btn-lg btn-primary" type="submit" value="Comment">
                </div>
              </form>
              <a href="/campgrounds/<%=campground._id %>">Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
