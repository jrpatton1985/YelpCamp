<% include ../partials/header %>
  <div class="bgRandom bgBlur"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <i class="glyphicon glyphicon-edit form-icon"></i>&nbsp;<span class="fa fa-commenting"></span>
            <h2><%=campground.name %></h2>

            <div class="form-center">
              <form action="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>" placeholder="text">
                </div>
                <div class="form-group">
                  <input class="btn btn-lg btn-primary" type="submit" value="Update">
                </div>
              </form>
              <a href="/campgrounds/<%=campground._id %>">Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
<% include ../partials/footer-java %>
<% include ../partials/bottom %>
