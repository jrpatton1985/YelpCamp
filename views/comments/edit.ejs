<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="form-bg">
        <h1>Edit Comment: <%=campground.name %></h1>

        <div class="form-center">
          <form action="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>" placeholder="text">
            </div>
            <div class="form-group">
              <input class="btn btn-lg btn-primary btn-block btn-log-reg" type="submit">
            </div>
          </form>
          <a href="/campgrounds/<%=campground._id %>">Back</a>
        </div>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
