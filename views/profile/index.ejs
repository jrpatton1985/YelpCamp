<% include ../partials/header %>

  <div class="bgRandom"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1">
        <div class="panel panel-default panel-profile">
          <div class="panel-body">
            <div class="container" style="width: 100%;">
              <div class="row">
                <p class="profile-heading">My Account</p>
              </div>

              <div class="row">

                <div class="col-md-5 col-sm-12">
                  <div class="profile-img">
                    <% if (currentUser.image !== undefined) { %>
                        <img class="img-circle" id="avatar" src="<%=currentUser.image %>" alt="">
                    <% } else { %>
                        <img class="img-circle" id="avatar" src="https://s3.us-east-2.amazonaws.com/pattonjim-yelpcamp/uploads/no-profile.png" alt="">
                    <% }%>

                    <p><span id='imageError' class='text-danger small'></span></p>

                    <button id="upModal" class="btn btn-sm upload-btn" type="button" data-target="#uploadModal" data-toggle="modal">Change Avatar</button>
                  </div>
                </div>

                <div class="col-md-7 col-sm-12">
                  <div class="profile-label">Username</div>
                  <div class="profile-info">
                    <%=currentUser.username %>
                  </div>
                  <div class="profile-label">Email</div>
                  <div class="profile-info">
                    <%=currentUser.email %>
                  </div>

                  <hr>

                  <form action="/profile/password" method="POST">
                    <input type="hidden" name="_id" value="<%=currentUser._id%>">
                    <div class="form-group">
                      <input class="form-control" type="password" name="passwordOld" value="" placeholder="old password">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="password" name="password" value="" placeholder="new password">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="password" name="password2" value="" placeholder=" confirm password">
                    </div>
                    <button class="btn btn-info btn-sm pull-right" type="submit">Save Changes</button>
                  </form>

                </div>

              </div>
            </div>

          </div>
        </div>

        <div class="upload-modal modal fade" id="uploadModal" tabindex="-1" role="dialog"></div>

      </div>
    </div>
  </div>

<% include ../partials/footer %>
<% include ../partials/footer-java %>

<script type="text/javascript" src="/js/upload.js"></script>

<% include ../partials/bottom %>
